<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/window"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="bottom|center_horizontal"
                android:text=""
                android:textColor="#FBFBFB"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/minusNumber"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/minusNumber"
                android:minWidth="68dp"
                android:minHeight="58dp"
                app:srcCompat="@drawable/reduce"
                tools:ignore="TouchTargetSizeCheck" />


            <TextView
                android:id="@+id/counterTextView"
                android:layout_width="87dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="#CFCFCF"
                android:gravity="center"
                android:shadowColor="#C2C2C2"
                android:shadowDx="10.0"
                android:shadowDy="1.0"
                android:shadowRadius="3.0"
                android:text="@string/counterTV"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />


            <ImageButton
                android:id="@+id/addNumber"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/addNumber"
                android:minWidth="68dp"
                android:minHeight="58dp"
                app:srcCompat="@drawable/add"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/yes"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:alpha="0.95"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/yes"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/no"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="107dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/no"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>