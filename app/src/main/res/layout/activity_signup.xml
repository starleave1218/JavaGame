<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/signupBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/yellow_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yellow_card"
        app:tint="#80F0E68C"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/signupFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintEnd_toEndOf="@+id/signupBackground"
        app:layout_constraintHorizontal_bias="0.5
"
        app:layout_constraintStart_toStartOf="@+id/signupBackground"
        app:layout_constraintTop_toTopOf="@+id/signupBackground"
        app:srcCompat="@drawable/signup_frame"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/signupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="132dp"
        android:text="@string/signup_title"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:drawableTint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/signupFrame"
        app:layout_constraintStart_toStartOf="@+id/signupFrame"
        app:layout_constraintTop_toTopOf="@+id/signupFrame" />

    <TextView
        android:id="@+id/TextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        android:text="@string/name"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/signupFrame"
        app:layout_constraintTop_toTopOf="@+id/signupFrame" />

    <EditText
        android:id="@+id/InputName"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:fontFamily="sans-serif-black"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupFrame"
        app:layout_constraintEnd_toEndOf="@+id/signupFrame"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toEndOf="@+id/TextName"
        app:layout_constraintTop_toTopOf="@+id/signupFrame"
        app:layout_constraintVertical_bias="0.306"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TextAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="184dp"
        android:text="@string/account"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/signupFrame"
        app:layout_constraintTop_toTopOf="@+id/signupFrame" />

    <EditText
        android:id="@+id/InputAccount"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:fontFamily="sans-serif-black"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupFrame"
        app:layout_constraintEnd_toEndOf="@+id/signupFrame"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toEndOf="@+id/TextAccount"
        app:layout_constraintTop_toTopOf="@+id/signupFrame"
        app:layout_constraintVertical_bias="0.49"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="248dp"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/signupFrame"
        app:layout_constraintTop_toTopOf="@+id/signupFrame" />

    <EditText
        android:id="@+id/InputPassword"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:fontFamily="sans-serif-black"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupFrame"
        app:layout_constraintEnd_toEndOf="@+id/signupFrame"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toEndOf="@+id/TextPassword"
        app:layout_constraintTop_toTopOf="@+id/signupFrame"
        app:layout_constraintVertical_bias="0.648"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/TextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="308dp"
        android:text="@string/email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/signupFrame"
        app:layout_constraintTop_toTopOf="@+id/signupFrame" />

    <EditText
        android:id="@+id/InputEmail"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:background="@drawable/text_frame"
        android:ems="15"
        android:fontFamily="sans-serif-black"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/signupFrame"
        app:layout_constraintEnd_toEndOf="@+id/signupFrame"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toEndOf="@+id/TextPassword"
        app:layout_constraintTop_toTopOf="@+id/signupFrame"
        app:layout_constraintVertical_bias="0.826"
        tools:ignore="LabelFor,SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/ButtonSignup"
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="45dp"
        android:layout_weight="1"
        android:text="@string/sign"
        android:textColor="@color/white"
        app:backgroundTint="#80000000"
        app:layout_constraintEnd_toEndOf="@+id/signupBackground"
        app:layout_constraintStart_toStartOf="@+id/signupBackground"
        app:layout_constraintTop_toTopOf="@+id/signupBackground"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>